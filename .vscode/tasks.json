{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run build",
            "type": "shell",
            "command": "wasm-pack build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$rustc",
                "fileLocation": "relative"
            }
        },
        {
            "label": "Build & Run admin-reset",
            "type": "shell",
            "command": "cargo run --manifest-path admin-reset/Cargo.toml",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$rustc",
                "fileLocation": "relative"
            }
        },
        {
            "label": "Build & Test apilib",
            "type": "shell",
            "command": "cargo test --manifest-path apilib/Cargo.toml -- --nocapture",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$rustc",
                "fileLocation": ["relative", "${workspaceFolder}/apilib"],
            }
        }
    ],

}